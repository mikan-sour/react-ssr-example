{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES6",                          
    "module": "commonjs",                    
    "lib": ["es6","DOM"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "exclude": ["build.mjs", "build/*","public/*"],
}